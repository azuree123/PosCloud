<!-- start: page -->
<div class="row mt-md">
    <div class="col-md-12">
        <ul class="snip1189">
            <li><a class="hidden" href="@Url.Action("ServicesList","Services")">Services</a></li>
            <li><a href="@Url.Action("ModifierList","Products")">Modifiers</a></li>
            <li class="current"><a href="#">Sections</a></li>



        </ul>
        <hr />

    </div>
