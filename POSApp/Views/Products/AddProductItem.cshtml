
@model POSApp.Core.ViewModels.ProductHelperViewModel

@{
    Layout = null;
}

@*<div id="ordine" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">*@


@using (Ajax.BeginForm("AddProductItem", "Products", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "AjaxUpdate",
    OnSuccess = "ChangeTableFill();"
}, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-bd lobidrag">
        <div class="panel-body">
            <div class="">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">


                  
                    <div class="col-md-offset-1 col-md-3">
                        <div class="form-group">
                            <label class="control-label">
                                @POSApp.Resources.Resource.size
                            </label>
                           
                                <input class="form-control" id="size" type="text" required="" name="size" placeholder="@POSApp.Resources.Resource.size" />


                            

                        </div>
                    </div>
                 
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">
                                @POSApp.Resources.Resource.Price
                            </label>
                           
                                <input class="form-control" id="price" type="number" min="1" required="" name="price" placeholder="@POSApp.Resources.Resource.Price" />

                                

                            

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">
                                @POSApp.Resources.Resource.Barcode
                            </label>
                           
                            <input class="form-control" id="barcode" type="text" name="barcode" placeholder="@POSApp.Resources.Resource.Barcode" />

                                

                            

                        </div>
                    </div>
                    <div class=" col-md-2 " style="margin-top: 25px">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default btn-sm btnPro"><span class="glyphicon glyphicon-plus"></span></button>
                        </div>
                    </div>


                </div>



            </div>

        </div>
    </div>
    @*</div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default btn-lg btnPro">Save</button>
                    <button type="button" class="btn btn-default btn-lg btnPro1" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>*@
}
