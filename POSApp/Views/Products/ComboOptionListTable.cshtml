
@model IEnumerable<POSApp.Core.ViewModels.ProductSubViewModel>

@{
    ViewBag.Title = "ComboOptionList";
    Layout = null;
}


<!-- start: page -->



<div class="row mb-lg" >
    <div class="table-responsive">
        <table class="table mb-none" style="width:100%" id="datatable-default">
            <thead>
                <tr>
                    <th> ID</th>
                    <th>Name</th>
                    <th>Qty</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var modifieroption in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@modifieroption.ProductName</td>
                        <td>@modifieroption.Qty</td>


                        <td class="center">
                            <div class="btn-group">
                                <a href="#" class = "btn btn-default text-success btn-sm fa fa-edit  " onclick="ShowUpdate('@modifieroption.ProductId.ToString()','@modifieroption.StoreId.ToString()')"  data-toggle = "tooltip" title = "Edit !"></a>
                                @Ajax.ActionLink(" ", "DeleteComboOption", "Products", new { productId = @modifieroption.ProductId, storeId = @modifieroption.StoreId }, new AjaxOptions { HttpMethod = "GET",
                                    UpdateTargetId = "AjaxUpdate"
                                },new{
                                    @onclick = "return confirm('Are you sure?')",
                                    @class = "btn btn-danger btn-sm fa fa-trash-o",
                                    @style = "color: #ffffff;"
                                })
                                </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="ModalData2"></div>

<script>

    $('a.modalShow2').on('click', function () {
       
        $.ajax({
            url: this.href,
            type: 'GET',
            cache: false,
            success: function (result) {
                $('#ModalData2').html(result).find('#ordine').modal('show');
            }
        });

        return false;
    });
</script>






