@model List<POSApp.Core.ViewModels.ModifierOptionViewModel>
@{
    Layout = null;
}

<div class="row mb-lg">
    <div class="col-md-12">
        <table class="table mb-none" style="width:100%" id="datatable-default">
            <thead>
                <tr>
                    <th>@POSApp.Resources.Resource.ID</th>
                    <th>@POSApp.Resources.Resource.name</th>
                    <th>@POSApp.Resources.Resource.Cost</th>
                    <th>@POSApp.Resources.Resource.Price</th>
                    <th>@POSApp.Resources.Resource.Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@s.Name</td>
                        <td>@s.Cost</td>
                        <td>@s.Price</td>
                        <td>
                            @*<a href="" class = "btn btn-default text-success btn-sm fa fa-edit  " onclick="ShowUpdate('@s.Name.ToString()')"  data-toggle = "tooltip" title = "Edit !"></a>*@
                            @Ajax.ActionLink(" ", "DeleteModifierOption", "Products", new { name = @s.Name, storeId = @s.StoreId }, new AjaxOptions { HttpMethod = "GET",
                           UpdateTargetId = "AjaxUpdate"
                       },new{
                           @onclick = "return confirm('Are you sure?')",
                           @class = "btn btn-danger btn-sm fa fa-trash-o",
                           @style = "color: #ffffff;"
                       })
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>


