    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="row">
                <div class="col-md-12">
                    <div class="" style="display: flex; justify-content: space-between;align-items: center">
                        <h3 class="wb-color"><b>Products</b></h3>
                        <a href="@Url.Action("AddProduct", "Products")" class="modalShow">
                            <span class="fa fa-2x fa-plus-circle"></span>
                        </a>
                    </div>
                </div>
            </div>

            <h2 class="panel-title"></h2>
        </header>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table mb-none" style="width:100%" id="datatable-default">
                    <thead>
                        <tr>
                            <th width="10%">ID</th>
                            <th width="20%">Name</th>
                            <th width="20%">Price</th>
                            <th width="20%">Image</th>
                            <th width="10%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var product in Model)
                        {
                            <tr class="">
                                <td>@(i++)</td>
                                <td>
                                    @product.Name
                                </td>
                                <td>@product.UnitPrice</td>
                                <td><img src="@product.Image" width="50" height="50" /></td>
                                <td class="center">
                                    @Html.ActionLink(" ", "UpdateProduct", "Products", new { id = @product.Id, storeId = @product.StoreId }, new { @class = "btn btn-default btn-sm fa fa-pencil modalShow" })
                                    @Html.ActionLink(" ", "DeleteProduct", "Products", new { id = @product.Id, storeId = @product.StoreId }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @style = "color: #ffffff;", onclick = "return confirm('Are you sure?');" })
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
                </div>
            </div>
</section>




<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();

        $('a.modalShow').on('click', function () {

            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ModalData').html(result).find('#ordine').modal('show');
                }
            });

            return false;
        });
    </script>
}

