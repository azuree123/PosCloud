@model POSApp.Core.ViewModels.ProductSubViewModel
@{
    Layout = null;
}
<div id="ordine" class="modal fade" role="dialog">


    @using (Ajax.BeginForm("AddComboOption", "Products", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "AjaxUpdate",
        OnSuccess = "$('#ordine').modal('hide');ChangeTableFill();"
    }, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog modal-block-md">
            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header modalheader">

                    <button type="button" class="close modalheader" data-dismiss="modal">×</button>

                    <h4 class="modal-title">
                        Add Items
                    </h4>



                </div>
                <div class="modal-body">
                    <div class="panel panel-bd lobidrag">

                        <div class="panel-body">




                            <div class="">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    @Html.TextBoxFor(model => model.ProductName, new  { @style = "display:none;" })


                                    <div class="col-md-8 col-md-offset-2">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "control-label required1" })
                                            @Html.DropDownListFor(model => model.ProductId, Model.ProductDdl, "Select an Option", new { @class = "form-control", @required = true })
                                            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-8 col-md-offset-2">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Qty, htmlAttributes: new { @class = "control-label required1" })
                                            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                            @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>



                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default btn-lg btnPro">Save</button>
                    <button type="button" class="btn btn-default btn-lg btnPro1" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    }
</div>


<script>
    $('#@Html.IdFor(a=>a.ProductId)').on("change", function () {
        $('#@Html.IdFor(a=>a.ProductName)').val($("#@Html.IdFor(a => a.ProductId) option:selected").text());

    })
</script>