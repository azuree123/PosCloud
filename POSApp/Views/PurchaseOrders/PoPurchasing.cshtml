@model List<POSApp.Core.ViewModels.TransDetailViewModel>
@{
    Layout = null;
}

<div class="row mb-lg">
    <div class="col-md-12">
        <table class="table mb-none" style="width:100%" id="datatable-default">
            <thead>
                <tr>




                    <th width="5%">  @POSApp.Resources.Resource.ID</th>
                    <th width="15%">  @POSApp.Resources.Resource.name</th>
                    <th width="10%">  @POSApp.Resources.Resource.Quantity</th>
                    <th width="10%">  @POSApp.Resources.Resource.Unit</th>
                    <th width="10%">  @POSApp.Resources.Resource.Cost</th>
                    <th width="15%"> Batch Number</th>
                    <th width="15%"> ManufactureDate</th>
                    <th width="15%"> ExpiryDate</th>
                    <th width="5%">  @POSApp.Resources.Resource.Action</th>



                </tr>
            </thead>
            <tbody>
                @{ int count = 1;}
                @foreach (var s in Model)
                {
                    <tr>
                        @if (s.BatchNumber == null)
                        {
                            <td>@(count++)</td>
                            <td>@s.ProductName</td>
                            <td>@String.Format("{0:#,##0.00}", s.Quantity)</td>
                            <td>@s.UnitName</td>
                            <td>@s.UnitPrice</td>
                        }
                        else
                        {

                            <td>@(count++)</td>
                            <td>@s.ProductName</td>
                            <td>@String.Format("{0:#,##0.00}", s.Quantity)</td>
                            <td>@s.UnitName</td>
                            <td>@s.UnitPrice</td>
                            <td>@s.BatchNumber</td>
                            <td>@Convert.ToDateTime(s.ManufactureDate).ToShortDateString()</td>
                            <td>@Convert.ToDateTime(s.ExpiryDate).ToShortDateString()</td>
                        }
                        <td>
                            @Ajax.ActionLink(" ", "RemoveTransactionItem", "PurchaseOrders", new {productId = @s.ProductCode}, new AjaxOptions
                            {
                            HttpMethod = "GET",
                            UpdateTargetId = "AjaxUpdate"
                            }, new
                            {
                            @onclick = "return confirm('Are you sure?')",
                            @class = "btn btn-danger btn-sm fa fa-trash-o",
                            @style = "color: #ffffff;"
                            })
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>


