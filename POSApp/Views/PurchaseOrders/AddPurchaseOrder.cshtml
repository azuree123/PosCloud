<!-- start: page -->
<div class="container-fluid">
    <div class="row mt-md">
        <div class="col-md-12">
            <h4 class=" wb-color  text-center">New Purchase Order</h4>
            <hr />

        </div>
    </div>
    <div class="row mt-lg">
 


        <div class="col-md-12">
            <div class="tabs tabs-vertical tabs-left">
                <ul class="nav nav-tabs col-md-2  col-xs-4 ">
                    <li class="active mt-xs">
                        <a href="#basicdata" data-toggle="tab"> Basic Data <i class="fa fa-chevron-right tb-icon"></i></a>
                    </li>
                    <li>
                        <a href="#transactionitems" data-toggle="tab">Transaction Items <i class="fa fa-chevron-right tb-icon"></i></a>
                    </li>
                </ul>
                <div class="ml-lg">


                    <div class="tab-content col-md-10 col-xs-8 pb-xlg">
                        <div id="basicdata" class="tab-pane active">
                            <h4 class="mt-none mb-lg ">Basic Data</h4>
                            <div class="row">
                                <div class="col-md-9 col-lg-offset-2">
                                    <div class="form-group">
                                        <label class="control-label">
                                            Supplier <span class="text-danger">*</span>
                                        </label>
                                        <select class="form-control" required>
                                            <option value="" disabled selected> Choose</option>
                                            <option value=""> Supplier 1</option>
                                            <option value=""> Supplier 2</option>
                                        </select>
                                    </div>
                               

                                    <div class="form-group">
                                        <label class="control-label">  Purchase order Date</label>
                                
                                            <div class="input-group">
                                                <input type="text" data-plugin-datepicker="true" class="form-control unstyled">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                    
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">
                                            Remarks
                                        </label>
                                        <textarea rows="4" class="form-control "></textarea>
                                    </div>
                                </div>
                            </div>
      
                           
                        </div>
                        <div id="transactionitems" class="tab-pane">



                            <div class=" mb-lg" style="display: flex; align-items: center">
                                <h4 class="mt-xs  " style="flex-grow: 8">Transaction Items</h4>


                                <a href="#" class="modalShow">
                                    <button type="button" class="btn outline-success btn-sm"><i class="fa fa-plus pr-sm"></i>Add New</button>

                                </a>

                            </div>




                            <div class="row mb-lg">
                                <div class="col-md-12">


                                    <table class="table mb-none" style="width:100%" id="datatable-default">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Supplier</th>
                                                <th>Order Date</th>
                                                <th>Supply Date</th>
                                                <th>Invoice</th>
                                                <th>Total Price</th>


                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <h4 class="mb-lg ">Add items From Tag</h4>

                            <div class="row mb-lg">
                                <div class="col-md-9 col-lg-offset-2">


                                    <div class="form-group">
                                        <label class="control-label">
                                            Select Tag
                                        </label>
                                        <input type="text" class="form-control unstyled" placeholder="" />
                                    </div>
                                </div>
                            </div>


                            <h4 class="mb-lg ">Upload Items Via Excel</h4>

                            <div class="row">
                                <div class="col-md-9 col-lg-offset-2">


                                    <div class="form-group">
                                  
                                        <input type="file" class="" placeholder="" />
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>






