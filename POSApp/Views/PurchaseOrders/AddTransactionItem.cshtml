

@{
    Layout = null;
}

<div id="ordine" class="modal fade" role="dialog">
    @{ string s = ViewBag.edit;}

    @using (Html.BeginForm(s, "PurchaseOrders", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header modalheader">
                  
                    <button type="button" class="close modalheader" data-dismiss="modal">×</button>

                        <h4 class="modal-title">
                            Add Item
                        </h4>
                   


                </div>
                <div class="modal-body">
                    <div class="panel panel-bd lobidrag">

                        <div class="panel-body">

                


                            <div class="">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">


                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">
                                                Inventory Item
                                            </label>
                                            <input type="text" class="form-control" name="" placeholder="Enter Item" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">
                                          Quantity
                                            </label>
                                            <input type="number" class="form-control" name="" placeholder="Enter Item" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">
                                           Cost
                                            </label>
                                            <input type="number" class="form-control" name="" placeholder="Enter Item" />
                                        </div>
                                    </div>










                                </div>



                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default btn-lg btnPro">Save</button>
                    <button type="button" class="btn btn-default btn-lg btnPro1" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    }
</div>

