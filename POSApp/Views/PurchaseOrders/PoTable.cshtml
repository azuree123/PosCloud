@model List<POSApp.Core.ViewModels.TransDetailViewModel>
@{
    Layout = null;
}

<div class="row mb-lg">
    <div class="col-md-12">
        <table class="table mb-none" style="width:100%" id="datatable-default">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @{ int count = 1;}
            @foreach (var s in Model)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@s.ProductName</td>
                    <td>@s.Quantity</td>
                    <td>@s.Discount</td>
                    <td>
                        <a href="@Url.Action("RemoveTransactionItem",new{productId=@s.ProductId})"  onclick="return confirm('Are you sure?');">
                        <i class="btn btn-danger btn-sm fa fa-trash-o" style="color: #ffffff;" ></i>
                        </a> 
                    </td>
                </tr>
            }


            </tbody>
        </table>
    </div>
</div>
