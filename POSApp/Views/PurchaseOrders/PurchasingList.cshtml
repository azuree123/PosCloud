        <h2 class="panel-title"></h2>
    </header>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table mb-none" style="width:100%" id="datatable-default">
                <thead>
                    <tr>
                        <th width="5%">ID</th>
                        <th>Supplier</th>
                        <th>Order Date</th>
                        <th>Invoice</th>
                        <th ">Total Price</th>
                        <th>Type</th>
                        <th width="15%">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var purchaseOrder in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@purchaseOrder.BusinessPartnerName</td>
                            <td>@purchaseOrder.TransDate</td>
                            <td>@purchaseOrder.TransCode</td>
                            <td>@purchaseOrder.TotalPrice</td>
                            <td>@purchaseOrder.Type</td>
                            <td>
                                @Html.ActionLink(" ", "PreviewPurchasing", "PurchaseOrders", new { id = @purchaseOrder.Id, storeId = @purchaseOrder.StoreId }, new { @class = "btn btn-default  btn-sm fa fa-eye  ", data_toggle = "tooltip", title = "Preview !" })
                                @Html.ActionLink(" ", "UpdatePurchasing", "PurchaseOrders", new { id = @purchaseOrder.Id, storeId = @purchaseOrder.StoreId }, new { @class = "btn btn-default text-success btn-sm fa fa-edit  ", data_toggle = "tooltip", title = "Edit !" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>





<div id="ModalData"></div>
@section scripts
