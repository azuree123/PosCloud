<section class="panel">

    <header class="panel-heading">
        <div class="row">
            <div class="col-md-12">


                <div class="" id="header-flex">
                    <h3 class="wb-color" style="flex-grow: 8"><b>Purchasing </b></h3>



                    <a href="@Url.Action("AddPurchasing","PurchaseOrders")" style="flex-grow: 0.2">
