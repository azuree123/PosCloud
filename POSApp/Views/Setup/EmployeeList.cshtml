@model IEnumerable<POSApp.Core.Models.Employee>

@{
    ViewBag.Title = "EmployeeList";
}

    @*<header class="page-header">
        <h2>Employees</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Employee</span></li>
                <li><span>Setup</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>*@

    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="row">
                <div class="col-md-12">
                    <div class="" style="display: flex; justify-content: space-between;align-items: center">
                        <h3 class="wb-color"><b>Employees</b></h3>
                        <a href="@Url.Action("AddEmployee", "Setup")" class="modalShow">
                            <span class="fa fa-2x fa-plus-circle"></span>
                        </a>
                    </div>
                </div>
            </div>

            <h2 class="panel-title"></h2>
        </header>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table mb-none" style="width:100%" id="datatable-default">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            @*<th>Email</th>*@
                            <th>Gender</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Mobile Number</th>
                            <th>Commission</th>
                            @*<th>Joining Date</th>*@
                            <th width="10%">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@employee.Name</td>
                                @*<td>@employee.Email</td>*@
                                <td>@employee.Gender</td>
                                <td>@employee.DepartmentId</td>
                                <td>@employee.DesignationId</td>
                                <td>@employee.MobileNumber</td>
                                <td>@employee.Commission</td>
                                @*<td>@employee.JoinDate</td>*@
                                <td class="center">
                                    @Html.ActionLink(" ", "UpdateEmployee", "Setup", new { id = @employee.Id, storeId = @employee.StoreId }, new { @class = "btn btn-default btn-sm fa fa-pencil modalShow" })
                                    @Html.ActionLink(" ", "DeleteEmployee", "Setup", new { id = @employee.Id, storeId = @employee.StoreId }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @style = "color: #ffffff;", onclick = "return confirm('Are you sure?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>






<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();

        $('a.modalShow').on('click', function () {

            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ModalData').html(result).find('#ordine').modal('show');
                }
            });

            return false;
        });
    </script>
}


