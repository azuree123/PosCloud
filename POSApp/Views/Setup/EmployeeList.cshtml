    <section class="panel">
        <header class="panel-heading">
            <div class="row">
                <div class="col-md-12">
       

                    <div class="" id="header-flex">
                        <h3 class="wb-color" style="flex-grow: 8"><b>Employees</b></h3>

                        <a href="@Url.Action("AddEmployee", "Setup")" class="modalShow" style="flex-grow: 0.2">
                            <button type="button" id="summitF" class="btn outline-success btn-sm"><i class="fa fa-plus pr-sm"></i>Add Employee</button>

                        </a>

                        <a href="@Url.Action("EmployeeExcelImport", "ExcelImport")" class="modalShow" style="flex-grow: 0">
                            <button type="button" id="summitF" class="btn outline-danger btn-sm"><i class="fa fa-plus pr-sm"></i>Import Data</button>

                        </a>



                    </div>
                </div>
            </div>

            <h2 class="panel-title"></h2>
        </header>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table mb-none" style="width:100%" id="datatable-default">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Department</th>
                            @*<th>Designation</th>*@
                            <th>Mobile Number</th>
                            <th>Commission</th>
                            <th>Joining Date</th>
                            <th width="10%">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@employee.Name</td>
                                <td>@employee.Email</td>
                                <td>@employee.Gender</td>
                                <td>@employee.DepartmentId</td>
                                @*<td>@employee.DesignationId</td>*@
                                <td>@employee.MobileNumber</td>
                                <td>@employee.Commission</td>
                                <td>@employee.JoinDate.ToShortDateString()</td>
                                <td class="center">
                                    <div class="btn-group">

                                    @Html.ActionLink(" ", "UpdateEmployee", "Setup", new { id = @employee.Id, storeId = @employee.StoreId }, new { @class = "btn btn-default text-success btn-sm fa fa-edit modalShow ", data_toggle = "tooltip", title = "Edit !" })
                                    @Html.ActionLink(" ", "DeleteEmployee", "Setup", new { id = @employee.Id, storeId = @employee.StoreId }, new { @class = "btn btn-default text-danger  btn-sm fa fa-trash", data_toggle = "tooltip", title = "Delete !", onclick = "return confirm('Are you sure?');" })
                                    
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>






<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();

        $('a.modalShow').on('click', function () {
            $.blockUI({ css: { backgroundColor: '#fff', color: '#0aaa5a' } }); 
            $.ajax({
                url: this.href,
                type: 'GET',
                success: function(result) {
                    $('#ModalData').html(result);
                    $('#ordine').modal('show');
                    $.unblockUI();
                }
            });

            return false;
        });
        $(document).ready(function () {
            $("#submitF").one('click', function (event) {  
                event.preventDefault();
                //do something
                $(this).prop('disabled', true);
            });
        });
    </script>
    
}


