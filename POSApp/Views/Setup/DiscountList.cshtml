</div>
    <section class="panel">
        <header class="panel-heading">
            <div class="row">
                <div class="col-md-12">
   
                    <div class="" style="display: flex; justify-content: space-between;align-items: center">
                        <h3 class="wb-color" style="flex-grow: 8"><b>Discounts</b></h3>


                        <a href="@Url.Action("AddDiscount", "Setup")" class="modalShow">
                            <button type="button" class="btn outline-success btn-sm"><i class="fa fa-plus pr-sm"></i>Add Discount</button>

                        </a>

                    </div>
                </div>
            </div>

            <h2 class="panel-title"></h2>
        </header>
        <div class="panel-body">
            <div class="table-responsive">

                <table class="table mb-none" style="width:100%" id="datatable-default">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                       
                      
                            <th>Amount</th>
                            <th>IsPercentage</th>
                            <th>Is Taxable</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var Discount in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@Discount.Name</td>
                   
                                <td>@Discount.Amount</td>
                                <td>@Discount.IsPercentage</td>
                                <td>@Discount.IsTaxable</td>
                                <td class="center">
                                    @Html.ActionLink(" ", "UpdateDiscount", "Setup", new { id = @Discount.Id }, new { @class = "btn btn-default btn-sm fa fa-pencil modalShow" })
                                    @Html.ActionLink(" ", "DeleteDiscount", "Setup", new { id = @Discount.Id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @style = "color: #ffffff;", onclick = "return confirm('Are you sure?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>





<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();

        $('a.modalShow').on('click', function () {

            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ModalData').html(result).find('#ordine').modal('show');
                }
            });

            return false;
        });
    </script>
}


