@using POSApp.Core.Models
@model POSApp.Core.ViewModels.AssignRoleViewModel

@{
    ViewBag.Title = "AssignRolesToUsers";
    AlertModel alertModel = (AlertModel)TempData["Alert"];
}
@if (alertModel != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertModel)
}
<div class="row mt-md">
    <div class="col-md-12">
        <ul class="snip1189">


            <li class="current"><a href="@Url.Action("AssignRolesToUsers","Setup")">Assign Roles</a></li>
            @*<li><a href="@Url.Action("UsersWithRoles", "Setup")">Users With Roles</a></li>*@

        </ul>
        <hr />

    </div>
</div>
<div class="panel">
    <div class="panel-heading">
        <h3 class="wb-color" style="flex-grow: 8"><b>Assign Roles</b></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.RoleName, new SelectList(Model.UserRolesList, "Value", "Text"),
                                new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.RoleName)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.UserName, new SelectList(Model.Userlist, "Value", "Text"),
                                new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Assign Role" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



