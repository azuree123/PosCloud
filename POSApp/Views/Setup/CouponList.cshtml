    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="row">
                <div class="col-md-12">
                    <div class="" style="display: flex; justify-content: space-between;align-items: center">
                        <h3 class="wb-color"><b>Coupons</b></h3>
                        <a href="@Url.Action("AddCoupon", "Setup")" class="modalShow">
                            <span class="fa fa-2x fa-plus-circle"></span>
                        </a>
                    </div>
                </div>
            </div>

            <h2 class="panel-title"></h2>
        </header>
        <div class="panel-body">
            <div class="table-responsive">

            <table class="table mb-none" style="width:100%" id="datatable-default">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Value</th>
                        <th>ValidFrom</th>
                        <th>ValidTill</th>
                        <th>Amount</th>
                        <th>Days</th>
                        <th>IsPercentage</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var Coupon in Model)
                    {
                    <tr>
                        <td>@(i++)</td>
                        <td>@Coupon.Name</td>
                        <td>@Coupon.Code</td>
                        <td>@Coupon.Value</td>
                        <td>@Coupon.ValidFrom.ToShortDateString()</td>
                        <td>@Coupon.ValidTill.ToShortDateString()</td>
                        <td>@Coupon.Amount</td>
                        <td>@Coupon.Days</td>
                        <td>@Coupon.IsPercentage</td>
                        <td class="center">
                            @Html.ActionLink(" ", "UpdateCoupon", "Setup", new { id = @Coupon.Id }, new { @class = "btn btn-default btn-sm fa fa-pencil modalShow" })
                            @Html.ActionLink(" ", "DeleteCoupon", "Setup", new { id = @Coupon.Id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @style = "color: #ffffff;", onclick = "return confirm('Are you sure?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </section>





<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();

        $('a.modalShow').on('click', function () {

            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ModalData').html(result).find('#ordine').modal('show');
                }
            });

            return false;
        });
    </script>
}

