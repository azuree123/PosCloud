        <ul class="snip1189">
            <li><a href="@Url.Action("RolesList","Setup")">Roles</a></li>
            <li class="current"><a href="@Url.Action("UserList", "User")">Users</a></li>
            <li ><a href="@Url.Action("SecurityObjectList", "User")">SecurityObjects</a></li>


        </ul>
        <hr />

