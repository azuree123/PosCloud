                                    <div class="col-md-8 col-lg-offset-2">
                                        <div class="form-group">
                                            <label class="control-label">
                                                @POSApp.Resources.Resource.Remarks
                                            </label>
                                            @Html.TextAreaFor(a => a.TransRef, new { @rows = "3", @class = "form-control ", @placeholder = "Enter Remarks" })
                                        </div>
                                    </div>
                                </div>


