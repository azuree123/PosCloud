
@{
    ViewBag.Title = "OpenTill";
}

<div class="panel panel-bd lobidrag">
    <header class="panel-heading">
        <div class="row">
            <div class="col-md-12">

                <div class="" id="header-flex">
                    <h3 class="wb-color" style="flex-grow: 8"><b>Open Till</b></h3>
                </div>





            </div>
        </div>

        <h2 class="panel-title"></h2>
    </header>
    <div class="panel-body">
        @using (Html.BeginForm("OpenTill", "PointOfSale",FormMethod.Post, new { @data_toggle = "validator" ,@role = "form" ,@id = "open-register-form" ,@enctype = "multipart/form-data"  ,@accept_charset = "utf-8" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl"  value="@ViewBag.ReturnUrl" >

            <div class="">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label for="cash_in_hand">Cash in hand</label>
                            <input type="number" name="cash_in_hand" min="0" autofocus="" required="" placeholder="0" value="" id="cash_in_hand" class="form-control">
                        </div>



                    </div>
                </div>
               
                <div class="row" style="margin-top: 25px">

                    <div class="col-lg-offset-3 col-lg-3">

                        <button type="submit" class="btn btn-success btn-block btn-md ">Submit</button>

                    </div>

                </div>


            </div>
        }
    </div>
</div>