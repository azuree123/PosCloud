@model TillOperation
@using POSApp.Core.Models

@{
    ViewBag.Title = "CloseTill";
    AlertModel alertModel = (AlertModel)TempData["Alert"];
}
@if (alertModel != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertModel)
}

<div class="panel panel-bd lobidrag">
    <header class="panel-heading">
        <div class="row">
            <div class="col-md-12">

                <div class="" id="header-flex">
                    <h3 class="wb-color" style="flex-grow: 8"><b>Close Till</b></h3>
                </div>





            </div>
        </div>

        <h2 class="panel-title"></h2>
    </header>
    <div class="panel-body">
        @using (Html.BeginForm())
        {

        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.CreatedById)
        @Html.HiddenFor(a => a.CreatedOn)
        @Html.HiddenFor(a => a.UpdatedById)
        @Html.HiddenFor(a => a.UpdatedOn)
        @Html.HiddenFor(a => a.ApplicationUserId)
        @Html.HiddenFor(a => a.StoreId)
        @Html.HiddenFor(a => a.TillOperationType)
        @Html.HiddenFor(a => a.OpeningAmount)
        @Html.HiddenFor(a => a.SessionCode)
        @Html.HiddenFor(a => a.ShiftId)
        @Html.HiddenFor(a => a.SystemAmount)
        @Html.HiddenFor(a => a.OperationDate)
        @Html.HiddenFor(a => a.Status)

        <div class="">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.PhysicalAmount, htmlAttributes: new { @class = "control-label required1 " })
                        @Html.EditorFor(model => model.PhysicalAmount, new { htmlAttributes = new { @class = "form-control", @Required = true, @type = "number", @min = "0", @placeholder = "Enter Amount", autofocus = "" } })
                        @Html.ValidationMessageFor(model => model.PhysicalAmount, "", new { @class = "text-danger" })
                    </div>



                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label  " })
                        @Html.TextAreaFor(model => model.Remarks, new {  @class = "form-control", @placeholder = "Enter Remarks"  })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>



                </div>
            </div>
            <div class="row" style="margin-top: 25px">

                <div class="col-lg-3">

                    <button type="submit" class="btn btn-success btn-block btn-md ">Submit</button>

                </div>

            </div>


        </div>
        }
    </div>
</div>