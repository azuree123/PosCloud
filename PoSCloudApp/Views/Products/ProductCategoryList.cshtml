
@model IEnumerable<PoSCloudApp.Core.Models.ProductCategory>

@{
    ViewBag.Title = "ProductCategoryList";
}
<section role="main" class="content-body">
    <header class="page-header">
        <h2>ProductCategory List</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>ProductCategories Listing</span></li>
                <li><span>Setup</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="@Url.Action("AddProductCategory","Products")" class="modalShow">
                    <span  class="fa fa-2x fa-plus-circle"></span>
                </a>
                <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
            </div>

            <h2 class="panel-title">Listing</h2>
        </header>
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" style="width:100%" id="datatable-default">
                <thead>
                    <tr>
                        <th width="5%">ID</th>
                        <th width="30%">Name</th>
                        <th width="30%">Images</th>
                        <th width="25%">Type</th>
                        <th width="10%">Action</th>
                    </tr>   
                </thead>    
                <tbody>     
                    @{ int i = 1;}
                    @foreach (var productCategory in Model)
                    {
                    <tr>
                        <td>@(i++)</td>
                        <td>@productCategory.Name</td>
                        <td>@productCategory.Image</td>
                        <td>@productCategory.Type</td>
                        <td>
                            @Html.ActionLink(" ", "UpdateProductCategory", "Products", new { id = productCategory.Id }, new { @class = "btn btn-info btn-sm fa fa-pencil modalShow", @style = "color: #ffffff;" })
                            @Html.ActionLink(" ", "DeleteProductCategory", "Products", new { id = productCategory.Id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @style = "color: #ffffff;", onclick = "return confirm('Are you sure?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>




</section>
<div id="ModalData"></div>
@section scripts
{
    <script>
        $('#datatable-default').dataTable();
        $('a.modalShow').on('click', function () {

            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ModalData').html(result).find('#ordine').modal('show');
                }
            });

            return false;
        });
    </script>
}


